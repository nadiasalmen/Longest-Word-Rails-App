<div class="container-fluid">
  <h1 class="m-2">New Game</h1>
  <ul class="letters m-2">
    <% @letters.each do |letter| %>
      <li><%= letter %></li>
    <% end %>
  </ul>
  <form action="/score" method="POST" class="m-2 pt-4 w-100">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <label for="">What is the longest word you can find?</label>
    <div class="d-flex w-100">
      <input type="text" class="flex-grow-1" name="word">
      <input type="submit" value="Play" class="px-4 py-2 ml-2">
    </div>
  </form>
</div>

